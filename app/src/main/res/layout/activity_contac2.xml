<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".contac2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--En tête-->

        <!--Corps-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--Bouton liste des médecins-->
            <TextView
                android:id="@+id/BoutonlisteMedecin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#17bf66"
                android:gravity="center"
                android:textSize="20sp"
                android:layout_marginBottom="15dp"
                android:clickable="true"
                android:onClick="onClick3"
                android:padding="5dp"
                android:text="Actualiser la liste des médecins " />

            <!--Liste des médecins-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/listeMedecin"
                    android:paddingTop="?attr/actionBarSize"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/add_Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="#165d91"
                    android:backgroundTint="#165d91"
                    android:onClick="onClick"
                    android:clickable="true"
                    android:focusable="true"
                    app:srcCompat="@drawable/ic_ajouter_medecin" />

            </LinearLayout>

            <!--Bouton d'appel-->
            <TextView
                android:id="@+id/appelerMedecin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#165d91"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="#fff"
                android:layout_marginBottom="15dp"
                android:clickable="true"
                android:onClick="onClick2"
                android:padding="8dp"
                android:drawableLeft="@android:drawable/stat_sys_phone_call"
                android:text="  Appeler" />
        </LinearLayout>

        <!--Pied de page-->
    </LinearLayout>

</ScrollView>